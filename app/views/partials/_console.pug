  .container
    .row
      .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-0.col-lg-5
        .row
          .col-xs-12
            .console-slider
              .console-slider__item
                a.console-slider__link.fancyimage(data-fancybox-group='group1', href='img/consoleSlider3.jpg')
                  i.fa.fa-search-plus.console-slider__zoom(aria-hidden="true")
                  img.img-responsive(src='img/consoleSlider3.jpg' alt='приставка фото')
              .console-slider__item
                a.console-slider__link.fancyimage(data-fancybox-group='group1', href='img/consoleSlider1.jpg')
                  i.fa.fa-search-plus.console-slider__zoom(aria-hidden="true")
                  img.img-responsive(src='img/consoleSlider1.jpg' alt='приставка фото')
              .console-slider__item
                a.console-slider__link.fancyimage(data-fancybox-group='group1', href='img/consoleSlider2.jpg')
                  i.fa.fa-search-plus.console-slider__zoom(aria-hidden="true")
                  img.img-responsive(src='img/consoleSlider2.jpg' alt='приставка фото')
          .col-xs-10.col-xs-offset-1      
            .console-slider-preview
              .console-slider-preview__item
                img.img-responsive(src='img/consoleSliderSmall1.png' alt='приставка фото')
              .console-slider-preview__item
                img.img-responsive(src='img/consoleSliderSmall2.png' alt='приставка фото')
              .console-slider-preview__item
                img.img-responsive(src='img/consoleSliderSmall3.png' alt='приставка фото')
